     function SelectEstado(){
$.ajax({
    url: '@Url.Action("Select", "Estado")',
    type: "POST",
    data: {},
    dataType: "json",
    success: function (d) {
        var len = d.length;

        $("#idEst").empty();
        $("#idEst").append("<option selected>Selecciona el estado</option>");
        for (var i = 0; i < len; i++) {
            var id = d[i].idEstado;
