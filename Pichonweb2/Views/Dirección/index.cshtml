});
     }

     function createtable() {
 $.ajax({
     url: '@Url.Action("Select", "Dirección")',
     type: "POST",
     data: { },
     dataType: "json",
     success: function (d) {
         var count = d.length;
         rest = d;
         $('#tbody').empty();
         for(i = 0; i < count; i++) {
              var contenido = '<tr>';
              contenido += '<td>' + d[i].idDirección +'</td>';
              contenido += '<td>' + d[i].idCliente +'</td>';
             contenido += '<td>' + d[i].Calle +'</td>';
             contenido += '<td>' + d[i].Numero + '</td>';
             contenido += '<td>' + d[i].CP + '</td>';
             contenido += '<td>' + d[i].idMunicipio + '</td>';
             contenido += '<td>' + d[i].idEstado + '</td>';
             contenido += '<td><button style="margin-right:30px;" class="btn btn-danger" onclick="Delete(' + d[i].idDirección + ')">Eliminar</button><button style="margin-right:30px;" class="btn btn-warning" onclick="showModal_(' + i + ')">Editar</button></td>';
              contenido += '</tr>';
              $('#tbody').append(contenido);
          }
     },
     error: function (d) {
         alert('Error de validacion. '+ d);
     }
 });

    };

     function Delete(id){
    $.ajax({
        url: '@Url.Action("delete", "Dirección")',
        type: "POST",
        data: { Id: id },
        dataType: "json",
        success: function (d) {
            if (d=="OK") {
                alert('Dirección borrada');
                createtable();
            }
        },
        error: function (d) {
            alert('Error de validacion. '+ d);
        }
    });
}

     function insertDireccion() {
         var idcliente = $('#idC').val();
         var calle = $('#Cal').val();
         var numero = $('#Num').val();
         var cp = $('#CP').val();
         var idmunicipio = $('#idMun').val();
         var idestado = $('#idEst').val();


    $.ajax({
        url: '@Url.Action("Insert", "Dirección")',
        type: "POST",
        data: { idCliente: idcliente, Calle: calle, Numero: numero, CP: cp, idMunicipio: idmunicipio, idEstado: idestado},
        dataType: "json",
        success: function (d) {
            if (d == "OK") {
                $("#exampleModal").modal('hide')
                alert('Dirección guardada.');
                createtable();
            }
        },
        error: function (d) {
            alert('Error de validacion. ' + d);
        }
    });
     }

     function UpdateCliente(name1){
$.ajax({
    url: '@Url.Action("Select", "Clientes")',
    type: "POST",
    data: {},
    dataType: "json",
    success: function (d) {
        var len = d.length;

        $("#clientidU").empty();
        //$("#idCli").append("<option selected>Selecciona el cliente</option>");
        for (var i = 0; i < len; i++) {
            var id = d[i].idCliente;
            var name = d[i].Nombre;

            if (name == name1) {
                $("#clientidU").append("<option selected value='" + id + "'>" + name + "</option>");
            } else {
                $("#clientidU").append("<option value='" + id + "'>" + name + "</option>");
            }
        }
    },
    error: function (d) {
        alert('Error de validacion. '+ d);
    }
});
     }

     function UpdateMunicipio(name1){
$.ajax({
    url: '@Url.Action("Select", "Municipio")',
    type: "POST",
    data: {},
