        var len = d.length;

        $("#idMunU").empty();
        for (var i = 0; i < len; i++) {
            var id = d[i].idMunicipio;
            var name = d[i].Nombre;

            if (name == name1) {
                $("#idMunU").append("<option selected value='" + id + "'>" + name + "</option>");
            } else {
