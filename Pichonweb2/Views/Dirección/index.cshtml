    }
});
        }

     function showModal(ID) {
     $.ajax({
         url: '@Url.Action("GetById", "Dirección")',
         type: "POST",
         data: { ID: ID},
         dataType: "json",
         success: function (d) {
             //$('#clientidI').val(d.idCliente);
             $('#idC').val(d.idCliente);
             $('#Cal').val(d.Calle);
             $('#Num').val(d.Numero);
             $('#CP').val(d.CP);
             $('#idMun').val(d.idMunicipio);
             $('#idEst').val(d.idEstado);
             $("#exampleModal").modal("show");
         },
         error: function (d) {
             alert('Error de validacion. ' + d);
         }
     });
    };

     function updateCliente() {
       var ID = $('#direccionidU').val();
       var idcliente = $('#clientidU').val();
       var calle = $('#CalU').val();
       var numero = $('#NumU').val();
       var cp = $('#CpU').val();
       var idmunicipio = $('#idMunU').val();
       var idestado = $('#idEstU').val();

   $.ajax({
       url: '@Url.Action("Update", "Dirección")',
       type: "POST",
       data: { IdDirección: ID, idCliente: idcliente, Calle: calle, Numero: numero, CP: cp, idMunicipio: idmunicipio, idEstado: idestado },
       dataType: "json",
       success: function (d) {
           if (d == "OK") {
               alert('Dirección actualizada.');
               location.reload();
           }
       },
       error: function (d) {
           alert('Error de validacion. ' + d);
       }
   });
     }

     function UpdateEstado(name1){
$.ajax({
    url: '@Url.Action("Select", "Estado")',
    type: "POST",
    data: {},
    dataType: "json",
    success: function (d) {
        var len = d.length;

        $("#idEstU").empty();
        for (var i = 0; i < len; i++) {
            var id = d[i].idEstado;
            var name = d[i].Nombre;

            if (name == name1) {
                $("#idEstU").append("<option selected value='" + id + "'>" + name + "</option>");
            } else {
                $("#idEstU").append("<option value='" + id + "'>" + name + "</option>");
            }
        }
    },
    error: function (d) {
        alert('Error de validacion. '+ d);
    }
});
}

     function actualizar() {
        var calle = $('#CalU').val()
    if (calle == "") {
        alert("El campo Nombre no puede estar vacío")

        return
    }

     $.ajax({
        url: '@Url.Action("Update", "Dirección")',
        type: "POST",
         data: { IdDirección: $('#direccionidU').val(), idCliente: $('#clientidU').val(), Calle: $('#CalU').val(), Numero: $('#NumU').val(), CP: $('#CpU').val(), idMunicipio: $('#idMunU').val(), idEstado: $('#idEstU').val() },
        dataType: "json",
         success: function (d) {
             $("#exampleModal2").modal('hide')
            alert("Datos actualizados")
            createtable();

        },
        error: function (d) {
            alert('Error de validacion. ' + d);
        }
    });
     }

     function showModal_(i) {
        $('#direccionidU').val(rest[i].idDirección);
        //$('#clientidU').val(rest[i].idCliente);
        UpdateCliente(rest[i].idCliente);
        $('#CalU').val(rest[i].Calle);
        $('#NumU').val(rest[i].Numero);
        $('#CpU').val(rest[i].CP);
        //$('#idMunU').val(rest[i].idMunicipio);
        UpdateMunicipio(rest[i].idMunicipio);
        //$('#idEstU').val(rest[i].idEstado);
        UpdateEstado(rest[i].idEstado);
        $("#exampleModal2").modal("show");



    };
</script>